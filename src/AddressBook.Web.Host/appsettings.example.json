{
  "ConnectionStrings": {
    "Default": "Server=YOUR_SERVER; Database=YOUR_DATABASE; Trusted_Connection=True;"
    // Replace Trusted_Connection=True with "User Id=YOUR_USERNAME; Password=YOUR_PASSWORD;" for SQL authentication
  },
  "App": {
    "ServerRootAddress": "https://localhost:44311/",
    "ClientRootAddress": "http://localhost:4200/",
    "CorsOrigins": "http://localhost:4200,http://localhost:8080,http://localhost:8081,http://localhost:3000"
    // Modify the CORS origins based on your allowed client URLs
  },
  "Authentication": {
    "JwtBearer": {
      "IsEnabled": "true",
      "SecurityKey": "YOUR_SECURITY_KEY",
      // Replace with your actual JWT Security Key for token signing
      "Issuer": "YOUR_ISSUER",
      // Replace with your JWT token issuer (e.g., your project name)
      "Audience": "YOUR_AUDIENCE"
      // Replace with your JWT token audience (e.g., your project name)
    }
  },
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "https://localhost:44311/"
        // This URL may vary depending on your deployment configuration
      }
    }
  },
  "Swagger": {
    "ShowSummaries": false
    // Keep false or true depending on how you want your Swagger documentation to behave
  }
}
